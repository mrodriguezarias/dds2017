{{#partial "head"}}
    <script src="./js/indicadores.js" defer></script>
{{/partial}}

{{#partial "body"}}
<h3>Indicadores</h3>

<div class="btn-toolbar" role="toolbar">
    <button type="button" id="agregar-indicador" class="btn btn-success" data-toggle="modal" data-target="#modal-indicador">
        <i class="fa fa-plus" aria-hidden="true"></i>
    </button>
    <button type="button" id="modificar-indicador" class="btn btn-primary" data-toggle="modal" data-target="#modal-indicador" disabled>
        <i class="fa fa-pencil" aria-hidden="true"></i>
    </button>
    <button type="button" id="borrar-indicador" class="btn btn-danger" disabled>
        <i class="fa fa-minus" aria-hidden="true"></i>
    </button>
</div>

<select id="indicadores" multiple class="form-control">
    {{#each indicadores}}
    <option value="{{name}}">{{name}}</option>
    {{/each}}
</select>




<div class="modal fade" id="modal-indicador" tabindex="-1" role="dialog" aria-labelledby="titulo-modal-indicador" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal-indicador">Indicador</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" class="form-control" value="{{name}}"/>
                </div>
                <div class="form-group">
                    <label for="descripcion">Descripción:</label>
                    <input type="text" id="descripcion" name="descripcion" class="form-control" value="{{description}}"/>
                </div>
                <div class="form-group">
                    <label for="formula">Fórmula:</label>
                    <input type="text" id="formula" name="formula" class="form-control" value="{{formula}}"/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="guardar" type="button" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
</div>
{{/partial}}

{{>layout.hbs}}