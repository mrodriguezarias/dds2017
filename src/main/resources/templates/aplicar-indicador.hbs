{{#partial "head"}}
<script src="{{ruta}}./js/aplicar-indicador.js" defer></script>
{{/partial}}

{{#partial "body"}}
<h3>Aplicar Indicador</h3>


<div class="form-group">
    <select id="periodos" class="form-control">
        <option value="0">Seleccione un período...</option>
        {{#each periodos}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label for="empresas">Seleccione una empresa:</label>
    <select multiple id="empresas" class="form-control">
        {{#each empresas}}
        <option value="{{nombre}}">{{nombre}}</option>
        {{/each}}
    </select>
</div>
<select multiple id="indicadores" class="form-control" disabled>
</select>
{{/partial}}

{{#partial "aplicar-cuerpo"}}
<div class="form-group">
    <label>Nombre {{aplicable}}:</label> <span id="modal-aplicar-nombre"></span>
</div>
<div class="form-group">
    <label>Empresa:</label> <span id="modal-aplicar-empresa"></span>
</div>
<div class="form-group">
    <label>Período:</label> <span id="modal-aplicar-periodo"></span>
</div>
<div class="form-group">
    <label>Valor:</label> <span id="modal-aplicar-valor"></span>
</div>
{{/partial}}

{{>layout.hbs}}